<package name="beam" version="0.3.0">
  <depends on="BEAST.base" atleast="2.7.7"/>
  <depends on="BEAST.app" atleast="2.7.7"/>
  <depends on="BEAST_CLASSIC" atleast="1.6.0"/>

  <service type="beast.base.core.BEASTInterface">
    <!-- Tree-related providers -->
    <provider classname="beam.tree.StartingTreeFromNewick"/>

    <!-- Likelihood-related providers -->
    <provider classname="beam.likelihood.IrreversibleTreeLikelihood"/>
    <provider classname="beam.likelihood.IrreversibleLikelihoodCore"/>
    <provider classname="beam.likelihood.BeamBeagleTreeLikelihood"/>
    <provider classname="beam.likelihood.BeagleAncestralTissueLikelihood"/>

    <!-- Substitution model providers -->
    <provider classname="beam.substitutionmodel.CrisprSubstitutionModel"/>
    <provider classname="beam.substitutionmodel.RandomTissueSubstitutionModel"/>
    <provider classname="beam.substitutionmodel.BeamNoDirectSeedingSpecifiedTissueGTRTissueSubstitutionModel"/>
    <provider classname="beam.substitutionmodel.BeamGtiTissueSubstitutionModel"/>
    <provider classname="beam.substitutionmodel.TissueSubstitutionModel"/>
    <provider classname="beam.substitutionmodel.BeamPrimaryOnlyTissueSubstitutionModel"/>
    <provider classname="beam.substitutionmodel.BeamPrimaryMetOnlyTissueSubstitutionModel"/>
    <provider classname="beam.substitutionmodel.BeamPrimaryMetReseedingAllTissueSubstitutionModel"/>
    <provider classname="beam.substitutionmodel.TissueSubstitutionModelLogger"/>

    <!-- Datatype providers -->
    <provider classname="beam.datatype.EditData"/>
    <provider classname="beam.datatype.TissueData"/>

    <!-- File I/O providers -->
    <provider classname="beam.fileio.AlignmentFromXSV"/>
    <provider classname="beam.fileio.TissueLabelsFromXSV"/>

  </service>
</package> 