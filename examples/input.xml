<beast beautitemplate='MultiTypeBirthDeath' beautistatus='' namespace="beast.base.evolution.alignment:beast.base.inference:beast.base.evolution.operator:beast.base.inference.operator:beast.base.evolution.sitemodel" required="BEAST.base" version="2.7">

<!-- Class name shortcuts -->
<map name="Uniform" >beast.base.inference.distribution.Uniform</map>
<map name="Exponential" >beast.base.inference.distribution.Exponential</map>
<map name="prior" >beast.base.inference.distribution.Prior</map>


<!-- Start user inputs -->
<!-- Path to barcode editing data in TSV matrix format with sites as columns.
Integer representations for barcode edits must increase sequentially starting
from 1 ... going left to right across rows starting from the first taxa row. 0 represents
the unedited state and missing data entries must be encoded as -1. -->
<data id="alignment" spec="beam.fileio.AlignmentFromMutationMatrixXSV" fileName="examples/barcodes.tsv">
    <userDataType spec="beam.datatype.EditData"/>
</data>

<!-- Path to known tip tissue labels as a CSV file with tipname,tissue format.
Also, specification of which tissue is the primary tissue and the names of other 
tissues as a CSV string -->
<data id="tissue" spec="beastclassic.evolution.alignment.AlignmentFromTrait">
    <traitSet id="traitset" spec="beam.fileio.TissueLabelsFromXSV" fileName="examples/tissues.csv" taxa="@taxonset"/>
    <userDataType id="tissueDatatype" spec="beam.datatype.TissueData" primaryTissue="LL" otherTissues="M,RL"/>
</data>

<!-- Length of the experiment (+0.0001 for numerical stability) in time units that the tree will be inferred in -->
<parameter id="originTime" spec="parameter.RealParameter" estimate="false">54.0001</parameter>

<!-- Equilibrium frequencies for the tissues at the start of the experiment.
Typically this should be left as 1 0 0 ... 0 format for n tissues to assume the tumor started in the primary tissue -->
<frequencies id="rootTissueFrequencies" spec="beast.base.evolution.substitutionmodel.Frequencies" frequencies="1 0 0" estimate="false"/>

<!-- NOTE: Users will also need to update the starting newick string below.
Other changes to parameters below should not be necessary for a basic run, 
but they can be made to improve the starting point for MCMC or change priors to
better match biological expectations. This may require a general understanding
of BEAST2. -->
<!-- End user inputs -->


<run id="mcmc" spec="MCMC" chainLength="1000000">
        <state id="state" spec="State" storeEvery="5000">
            <stateNode id="tree" spec="beam.tree.BeamStartingTreeFromNewick" taxa="@alignment" IsLabelledNewick="true" adjustTipHeights="true" newick="((((((M2.GTAGGCCCATTGCGGC-1:9.510559946850536,(RW.TTTATGCAGTCTTGCA-1:8.072604549720493,M2.CCCAATCGTTGCGTTA-1:8.072604549720493):1.4379553971300438):18.336689283152594,(RW.TGAGCCGGTTGTACAC-1:23.625341399188425,M2.TCGGTAAAGAAGGTGA-1:23.625341399188425):4.221907830814704):18.73537531391876,LL.GCGCAACAGGTAGCTG-1:46.582624543921895):1.616906704471214,((LL.TCAGATGGTTAAAGAC-1:38.54050829097753,LL.GGGTCTGAGCCCAGCT-1:38.54050829097753):9.263806172975377,RE.GAATGAAAGATGTCGG-1:47.804314463952906):0.39521673850226624):3.4712792274120967,(((((LL.GGTGAAGGTCTTCAAG-1:24.076415708572988,LL.GTGTTAGGTGATGATA-1:24.076415708572988):0.39521685754624225,LL.ACTGAACAGAGGACGG-1:24.471632566119233):12.985352531669678,((LL.CGTGAGCAGATAGCAT-1:8.613081992303519,LL.AAGTCTGTCCTAGTGA-1:8.613081992303519):28.448686166559202,(LL.GTACGTACATTGCGGC-1:0.3952166186746508,LL.ATTATCCAGTACGATA-1:0.3952166186746508):36.666551540188074):0.39521683789174394):13.423391800405849,RE.AGGGTGAAGATAGGAG-1:50.880377012266):0.3952167766618277,((M1.TTAACTCGTAGCGTCC-1:42.93637252804264,(LL.GTGCAGCGTTTGTTTC-1:0.3952166273332763,LL.GAACATCCACGTTGGC-1:0.3952166273332763):42.541155900709356):2.172139108941477,RE.CTCGGGACATTTGCTT-1:45.10851163698411):6.167082019845732):0.39521673278285896):1.9339728194574037,(((LL.CAGATCACACAGTCGC-1:35.941898253411075,LL.ACACCGGCACCAGATT-1:35.941898253411075):8.621148802159707,LL.GTCGGGTCAGGATCGA-1:44.563047055570784):2.116839662780363,(((LL.GCGCAACTCAACACCA-1:6.564442025629916,LL.ATTTCTGGTGAAATCA-1:6.564442025629916):39.325009398131165,LL.AACACGTTCTGCTGTC-1:45.88945142376108):0.3952181375659104,LL.ACCGTAATCCTCTAGC-1:46.284669561326986):0.39521692778528655):6.924896512765744):0.39521665883190477">
                <taxonset id="taxonset" spec="TaxonSet" alignment="@alignment"/>
            </stateNode>
            <parameter id="silencingRate" spec="parameter.RealParameter" lower="0" name="stateNode" upper="1000">0.001</parameter>
            <parameter id="clockRate.c" spec="parameter.RealParameter" name="stateNode">0.01</parameter>
            <parameter id="relativeGeoRates.s:tissue" spec="parameter.RealParameter" lower="0" dimension="3" name="stateNode">1</parameter>
            <parameter id="traitClockRate" spec="parameter.RealParameter" name="stateNode">0.01</parameter>
            <parameter id="piPrimaryTissueFreq" spec="parameter.RealParameter" estimate="true" lower="0" upper="1" name="stateNode">0.5</parameter>
            <parameter id="birthRate" spec="parameter.RealParameter" lower="0" name="stateNode" upper="1">0.006</parameter>
            <parameter id="deathRate" spec="parameter.RealParameter" lower="0" name="stateNode" upper="1">0.0001</parameter>
        </state>
        
        
        <distribution id="posterior" spec="CompoundDistribution">
            
            <distribution id="prior" spec="CompoundDistribution">

                <distribution id="birthDeathSamplingModel" spec="bdsky.evolution.speciation.BirthDeathSkylineModel"
                          conditionOnSurvival="True" tree="@tree" origin="@originTime" contemp="true"
                          birthRate="@birthRate" deathRate="@deathRate" rho="1" samplingRate="0" >
                </distribution>

                <prior id="silencingRatePrior" name="distribution" x="@silencingRate">
                    <Exponential name="distr">
                        <parameter spec="parameter.RealParameter" estimate="false" name="mean">0.1</parameter>
                    </Exponential>
                </prior>

                <prior id="ClockPrior.c" name="distribution" x="@clockRate.c">
                    <Exponential name="distr">
                        <parameter spec="parameter.RealParameter" estimate="false" name="mean">0.1</parameter>
                    </Exponential>
                </prior>

                <prior id="relativeGeoRatesPrior.s:tissue" name="distribution" x="@relativeGeoRates.s:tissue">
                    <Exponential name="distr">
                        <parameter spec="parameter.RealParameter" estimate="false" name="mean">1</parameter>
                    </Exponential>
                </prior>

                <prior id="geoclockPrior.c:tissue" name="distribution" x="@traitClockRate">
                    <Exponential name="distr">
                        <parameter spec="parameter.RealParameter" estimate="false" name="mean">0.1</parameter>
                    </Exponential>
                </prior>

                <prior id="piPrimaryTissueFreqPrior" name="distribution" x="@piPrimaryTissueFreq">
                    <Uniform name="distr" lower="0" upper="1"/>
                </prior>

                <prior id="birthRatePrior" name="distribution" x="@birthRate">
                    <Uniform name="distr" lower="0" upper="1"/>
                </prior>
                
                <prior id="deathRatePrior" name="distribution" x="@deathRate">
                    <Uniform name="distr" lower="0" upper="1"/>
                </prior>

            </distribution>
            
            
            <distribution id="likelihood" spec="CompoundDistribution" useThreads="true">
                
                <distribution id="treeLikelihood" spec="beam.likelihood.BeamIrreversibleTreeLikelihood" origin="@originTime" data="@alignment" tree="@tree">
                    <siteModel spec="SiteModel" id="siteModel" mutationRate="1" gammaCategoryCount="1">
                        <substModel id="substModel" spec="beam.substitutionmodel.BeamMutationSubstitutionModel" silencingRate="@silencingRate" data="@alignment">
                            <frequencies spec="beast.base.evolution.substitutionmodel.Frequencies" frequencies="1" estimate="false"/>
                        </substModel>
                    </siteModel>
                    <branchRateModel spec="beast.base.evolution.branchratemodel.StrictClockModel" clock.rate="@clockRate.c"/>
                </distribution>
                
                <distribution id="traitLikelihood" spec="beam.likelihood.BeamBeagleAncestralTissueLikelihood" origin="@originTime" tag="location" tree="@tree" data="@tissue">
                    <siteModel id="geoSiteModel.s:tissue" spec="SiteModel" gammaCategoryCount="1" mutationRate="1">
                        <substModel id="substModelMigration" spec="beam.substitutionmodel.BeamGtrTissueSubstitutionModel" rates="@relativeGeoRates.s:tissue" pi="@piPrimaryTissueFreq" frequencies="@rootTissueFrequencies"/>
                    </siteModel>
                    <branchRateModel id="StrictClockModel.c:tissue" spec="beast.base.evolution.branchratemodel.StrictClockModel" clock.rate="@traitClockRate"/>
                </distribution>
                
            </distribution>

        </distribution>

    <!-- Operators defining what proposals are made during MCMC iterations -->
    <operator  spec="Uniform" tree="@tree" weight="30"/>
    <operator  spec="SubtreeSlide" tree="@tree" weight="3"/>
    <operator spec="SubtreeSlide" tree="@tree" weight="3.0" size="30"/>
    <operator  spec="Exchange" isNarrow="false" tree="@tree" weight="30"/>
    <!-- Operators on barcode editing parameters-->
    <operator id="clockRateScaler" spec="ScaleOperator" parameter="@clockRate.c" scaleFactor="0.8" weight="3"/>
    <operator id="silencingRateScaler" spec="ScaleOperator" parameter="@silencingRate" scaleFactor="0.8" weight="3"/>
    <!-- Operators on tissue model parameters -->
    <operator id="georateScaler.s:tissue" spec="ScaleOperator" parameter="@relativeGeoRates.s:tissue" scaleAllIndependently="true" scaleFactor="0.99" weight="30"/>
    <operator id="tissueClockRateScaler" spec="ScaleOperator" parameter="@traitClockRate" scaleFactor="0.8" weight="3"/>
    <operator id="piPrimaryTissueFreqScaler" spec="ScaleOperator" parameter="@piPrimaryTissueFreq" scaleFactor="0.8" weight="3"/>
    <!-- Operators on phylodynamic prior parameters -->
    <operator id="birthRateScaler" spec="ScaleOperator" parameter="@birthRate" scaleFactor="0.8" weight="3"/>
    <operator id="deathRateScaler" spec="ScaleOperator" parameter="@deathRate" scaleFactor="0.8" weight="3"/>
    <operator id="updownBD" spec="UpDownOperator" scaleFactor="0.8" weight="30" up="@birthRate" down="@deathRate"/>

    <!-- Loggers -->
        <logger id="tracelog" spec="Logger" fileName="result.log" logEvery="1000" model="@posterior" sanitiseHeaders="true" sort="smart">
            <log idref="posterior"/>
            <log idref="likelihood"/>
            <log idref="prior"/>
            <log id="treeHeight" spec="beast.base.evolution.tree.TreeHeightLogger" tree="@tree"/>
            <log idref="silencingRate" />
            <log idref="clockRate.c"/>
            <log idref="relativeGeoRates.s:tissue"/>
            <log idref="traitClockRate"/>
            <log id="tissueSubstModelLogger" spec="beam.substitutionmodel.BeamTissueSubstitutionModelLogger" dataType="@tissueDatatype" model="@substModelMigration"/>
            <log idref="treeLikelihood"/>
            <log idref="traitLikelihood"/>
            <log idref="birthRate"/>
            <log idref="deathRate"/>
            <log idref="piPrimaryTissueFreq"/>
        </logger>

        <logger id="screenlog" spec="Logger" logEvery="1000">
            <log idref="posterior"/>
            <log spec="util.ESS" arg="@posterior"/>
        </logger>

        <logger id="treeWithTraitLogger" spec="Logger" fileName="result.trees" logEvery="1000" mode="tree">
                <log id="treeWithTraitLoggerItem" spec="beastclassic.evolution.tree.TreeWithTraitLogger" tree="@tree">
                    <metadata idref="traitLikelihood"/>
                </log>
        </logger>

    <operatorschedule id="OperatorSchedule" spec="kernel.BactrianOperatorSchedule"/>
</run>
</beast>
